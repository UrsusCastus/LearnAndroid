<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".CurrentImageActivity">

    <ImageView
        android:id="@+id/current_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

    <GridLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="5"
        android:layout_gravity="top|center">

        <Button
            android:id="@+id/black_and_white_button"
            android:text="Black and white"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="0"

            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/blur_filter"
            android:text="Blur"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="1"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/brightUp_filter"
            android:text="Bright Up"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="2"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/brightDown_filter"
            android:text="Bright Down"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="3"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/reset"
            android:text="Reset"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="4"
            android:textAllCaps="false"
            />
    </GridLayout>

</LinearLayout>
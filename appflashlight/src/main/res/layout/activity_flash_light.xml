<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="24dp"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/activity_flash_light_blink_flash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layoutDirection="rtl"
        android:text="@string/blink_flash"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/activity_flash_light_max_brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layoutDirection="rtl"
        android:text="@string/maximum_screen_brightness"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/activity_flash_light_flashlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layoutDirection="rtl"
        android:text="@string/flashlight"
        android:textSize="20sp" />

    <Button
        android:id="@+id/activity_flash_light_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flash"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_gravity="center" />

</LinearLayout>

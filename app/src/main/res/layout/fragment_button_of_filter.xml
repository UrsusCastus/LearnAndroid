<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:columnCount="2"
    android:rowCount="3">

    <Button
        android:id="@+id/black_and_white_button"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="Black and white"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/blur_filter"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="Blur"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/brightUp_filter"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="Bright Up (+ 10%)"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/brightDown_filter"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="Bright Down (- 10%)"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/reset"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="15sp" />
</GridLayout>
